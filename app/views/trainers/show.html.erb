<h3>Trainer</h3>
<p>Name: <%= @trainer.name if @trainer.name %></p>
<p>Email: <%= @trainer.email if @trainer.email %></p>
<%= link_to "New Pokemon", new_path, :class => "button medium" if @trainer==current_trainer%>

<h3>Trainer's Pokemon: </h3>

<% @trainer.pokemons.each do |poke| %>
		<% if poke.ndex %>
    		<%= image_tag("pokemon/#{poke.ndex}.png", alt: "pokemon") %>
  		<% end %>
		<p>Pokemon Name: <%= poke.name %></p>
		
		<p>Pokemon Level: <%= poke.level %></p>

		<p>Pokemon Health: <%= poke.health %></p>

		<p> Attack Trainer's <%= poke.name %>!</p>
  <!-- REPLACE THIS LINE BELOW -->
  <%= button_to "Damage!", damage_path(id: poke), :class => "button medium", :method => :patch %>
	<% end %>