<h3>Trainer</h3>
<p>Name: <%= @trainer.name if @trainer.name %></p>
<p>Email: <%= @trainer.email if @trainer.email %></p>

<h3>Trainer's Pokemon: </h3>

<% @trainer.pokemons.each do |poke| %>
		<% if poke.ndex %>
    		<%= image_tag("pokemon/#{poke.ndex}.png", alt: "pokemon") %>
  		<% end %>
		<p>Pokemon Name: <%= poke.name %></p>
		
		<p>Pokemon Level: <%= poke.level %></p>
		
	<% end %>